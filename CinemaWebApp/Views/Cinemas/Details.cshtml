@model IEnumerable<IGrouping<Movie, Screening>>

@{
    ViewData["Title"] = "Cinema Program";
}

<h1>Program</h1>

@foreach (var group in Model)
{
    <br />
    <h3 class="text-success">@group.Key.Title</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(modelItem => group.First().Movie.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => group.First().Movie.Duration)
                </th>
                <th>...........</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in group)
            {
                <tr>
                    <td class="col-4">
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScreeningRoom.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RemainingNoOfSeats)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="ContentAdmins" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot></tfoot>
    </table>
}

