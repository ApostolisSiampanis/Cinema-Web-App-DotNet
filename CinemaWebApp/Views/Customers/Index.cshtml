@model IEnumerable<CinemaWebApp.Models.Cinema>

@{
    ViewData["Title"] = "Index";
}

<h1>Select Cinema</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                City
            </th>
            <th>
                Address
            </th>
            <th>
                View Program
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-controller="Cinemas" asp-action="Details" asp-route-id="@item.Id">Check</a>
            </td>
        </tr>
}
    </tbody>
</table>
