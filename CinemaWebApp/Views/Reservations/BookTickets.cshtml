@model CinemaWebApp.Models.Reservation

@{
    ViewData["Title"] = "Book Tickets";
}

<h1>Book Tickets</h1>

@if (ViewData["ReservationExists"] != null && (bool)ViewData["ReservationExists"])
{
    <p>You have already booked:</p>
    <a asp-action="Details" asp-controller="Reservations" asp-route-id="@ViewData["ReservationId"]">View Reservation Details</a>
}
else
{
    <h4>Customer Information</h4>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Customer.User.FirstName)
            </dt>
            <dd>
                @ViewBag.Customer.User.FirstName
            </dd>
        </dl>
    </div>

    <h4>Screening Information</h4>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                Movie Title
            </dt>
            <dd>
                @ViewBag.Screening.Movie.Title
            </dd>
            <dt>
                Screening Room
            </dt>
            <dd>
                @ViewBag.Screening.ScreeningRoom.Name
            </dd>
            <dt>
                Screening Date
            </dt>
            <dd>
                @ViewBag.Screening.StartTime
            </dd>
        </dl>
    </div>

    <h4>Reservation</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CustomerId" value="@ViewData["CustomerId"]" />
                <input type="hidden" asp-for="ScreeningId" value="@ViewData["ScreeningId"]" />

                <div class="form-group">
                    <label asp-for="NoOfBookedSeats" class="control-label"></label>
                    <input asp-for="NoOfBookedSeats" class="form-control" />
                    <span asp-validation-for="NoOfBookedSeats" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
