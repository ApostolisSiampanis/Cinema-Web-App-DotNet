@model CinemaWebApp.Models.Reservation

@{
    ViewData["Title"] = "Reservation";
}
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.User.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Customer.User.FirstName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.User.LastName)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Customer.User.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Screening)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Screening.ScreeningRoom.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Screening.Movie)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Screening.Movie.Title
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Screening.StartTime)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Screening.StartTime
        </dd>
    </dl>
    <a asp-controller="Reservations" asp-action="Index" asp-route-id="@Model.CustomerId">Back to Reservation History</a>
</div>
